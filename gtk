#!/bin/bash

current_dir=`pwd`
base_dir=`dirname $0`

function get_current_branch() {
	git branch | grep '*' | sed 's/^\* \([a-zA-Z0-9]*\)/\1/'
}

function print_usage() {
	echo "#    gtk: Git Tool Kit"
	echo "#    Simplify commonly used Git commands with intelligent assumptions"
	echo "#"
	echo "#    Usage: gtk <command> [arguments]"
	echo "#"
	echo "#    Available commands:"
	echo "#        current_branch"
	echo "#        ls"
	echo "#        review"
	echo "#        help"
	echo "#    "
	echo "#    Show help for a specific command:"
	echo "#    gtk help <command>"
}

function print_help() {
	if [ -z "$1" ]; then
		print_usage
	elif [ "$1" = "current_branch" ]; then
		echo "gtk current_branch: Displays the currently checked out branch."
	else
		$base_dir/gtk-$1 --help
	fi
}

if [ -z "$1" ]
then
	print_usage
	exit 0
fi

case $1 in
	'branch')
		shift
		$base_dir/gtk-branch $@
		;;
	'current_branch')
		get_current_branch
		;;
	'ls')
		shift
		$base_dir/gtk-ls $@
		;;
	'review')
		shift
		$base_dir/gtk-review $@
		;;
	'help')
		shift
		print_help "$1"
		;;
esac

exit 0
